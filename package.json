{
  "name": "@gitcoin/passport",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.23",
    "concurrently": "^7.0.0",
    "husky": "^7.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^5.0.0"
  },
  "scripts": {
    "clean": "pnpm -r run clean",
    "nuke": "pnpm run clean && rimraf node_modules",
    "prepare": "husky install",
    "lint": "pnpm -r run lint",
    "lint:iam": "pnpm --filter @gitcoin/passport-iam run lint",
    "lint:identity": "pnpm --filter @gitcoin/passport-identity run lint",
    "test": "pnpm -r run test",
    "test:iam": "pnpm --filter @gitcoin/passport-iam run test",
    "test:app": "pnpm --filter @gitcoin/passport-app run test",
    "test:identity": "pnpm --filter @gitcoin/passport-identity run test",
    "prettier": "pnpm -r run prettier",
    "build": "pnpm run build:identity && pnpm run build:schemas && pnpm run build:database-client && pnpm run build:platforms && pnpm run build:iam && pnpm run build:app",
    "build:database-client": "pnpm --filter @gitcoin/passport-database-client run build",
    "build:identity": "pnpm --filter @gitcoin/passport-identity run build",
    "build:iam": "pnpm --filter @gitcoin/passport-iam run build",
    "build:app": "pnpm --filter @gitcoin/passport-app run build",
    "build:platforms": "pnpm --filter @gitcoin/passport-platforms run build",
    "build:schemas": "pnpm --filter @gitcoin/passport-schemas run build",
    "debug": "concurrently --kill-others \"pnpm run debug:iam\" \"pnpm run start:app\" \"pnpm run debug:db-client\"",
    "debug:iam": "pnpm --filter @gitcoin/passport-iam run debug",
    "debug:db-client": "pnpm --filter @gitcoin/passport-database-client run debug",
    "start": "concurrently --kill-others \"pnpm run start:iam\" \"pnpm run start:app\"",
    "start:iam": "pnpm --filter @gitcoin/passport-iam run start",
    "start:app": "pnpm --filter @gitcoin/passport-app run start",
    "start:ceramic": "pnpm --filter @gitcoin/passport-database-client run ceramic",
    "prod:start:iam": "pnpm --filter @gitcoin/passport-iam run prod:start",
    "app": "pnpm --filter @gitcoin/passport-app",
    "schemas": "pnpm --filter @gitcoin/passport-schemas",
    "iam": "pnpm --filter @gitcoin/passport-iam",
    "identity": "pnpm --filter @gitcoin/passport-identity",
    "types": "pnpm --filter @gitcoin/passport-types",
    "prestart": "pnpm run build:schemas && pnpm run build:identity && pnpm run build:database-client && pnpm run build:platforms && pnpm run build:iam",
    "pretest": "pnpm run build:schemas && pnpm run build:identity && pnpm run build:database-client",
    "postinstall": "pnpm run build:schemas && pnpm run build:identity && pnpm run build:database-client && pnpm run build:platforms && pnpm run build:iam",
    "test:ceramic-integration": "pnpm --filter @gitcoin/passport-database-client run test:integration"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pnpm": {
    "overrides": {
      "csstype": "3.0.10",
      "@types/react": "17.0.2",
      "leveldown": "6.1.1",
      "node-gyp": "^9.0.0"
    }
  },
  "dependencies": {
    "@gitcoin/passport-database-client": "workspace:*",
    "@gitcoin/passport-identity": "workspace:*",
    "@gitcoin/passport-platforms": "workspace:*",
    "@gitcoin/passport-types": "workspace:*",
    "@gitcoin/passport-iam": "workspace:*",
    "@gitcoin/passport-schemas": "workspace:*",
    "@gitcoin/passport-app": "workspace:*"
  }
}
