    "dids": "^5.0.2",
    "dotenv": "^16.0.0",
    "key-did-provider-ed25519": "^2.0.0",
    "key-did-resolver": "^4.0.0",
    "graphql": "^16.9.0",
    "axios": "^0.27.2",
    "@ipld/dag-cbor": "^9.2.1"
  },
  "devDependencies": {
    "@ceramicnetwork/cli": "^3.2.0",
    "@composedb/cli": "^0.6.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.6",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.8.0",
