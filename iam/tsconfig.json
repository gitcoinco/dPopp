{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2020",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "*": [
        "../node_modules/*",
        "node_modules/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}
