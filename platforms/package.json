{
  "name": "@gitcoin/passport-platforms",
  "version": "1.0.0",
  "license": "MIT",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".":  "./dist/esm/index.js",
    "./procedure-router":  "./dist/esm/procedure-router.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/esm/index.d.ts"
      ],
      "procedure-router": [
        "./dist/esm/procedure-router.d.ts"
      ]
    }
  },
  "directories": {
    "src": "src",
    "dist": "dist"
  },
  "files": [
    "src",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@gitcoin/passport-types": "^1.0.0",
    "@guildxyz/sdk": "^2.5.0",
    "@spruceid/didkit-wasm": "^0.3.0-alpha0",
    "axios": "^1.7.9",
    "bignumber.js": "^9.1.2",
    "ethers": "^6.13.4",
    "multiformats": "^13.0.0",
    "redis": "^4.6.10",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/plugin-syntax-import-assertions": "^7.23.3",
    "@babel/plugin-transform-modules-commonjs": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/luxon": "^2.3.2",
    "@types/node": "16",
    "@types/node-fetch": "latest",
    "@types/supertest": "^2.0.12",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/parser": "^6.19.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-replace-import-extension": "^1.1.3",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "eslint": "^8.52.0",
    "jest": "^29.6.4",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "supertest": "^6.2.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.0",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "clean": "rimraf dist node_modules",
    "build": "npm run build:esm && npm run build:types",
    "build:esm": "tsc --module NodeNext --outDir dist/esm",
    "build:types": "tsc --declaration --declarationDir dist --emitDeclarationOnly",
    "test": "jest --verbose",
    "lint": "tsc --noEmit && eslint --ext .ts,.js,.tsx .",
    "prettier": "prettier --write ."
  }
}