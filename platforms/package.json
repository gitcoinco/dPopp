{
  "name": "@gitcoin/passport-platforms",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }, 
    "./procedure-router": 
    {
      "import": "./dist/esm/procedure-router.js",
      "require": "./dist/cjs/procedure-router.js",
      "types": "./dist/index.d.ts"
    }

  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/cjs/index.d.ts"
      ],
      "procedure-router": [
        "./dist/cjs/procedure-router.d.ts"
      ]
    }
  },
  "directories": {
    "src": "src",
    "dist": "dist"
  },
  "files": [
    "src",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@gitcoin/passport-types": "^1.0.0",
    "@guildxyz/sdk": "^2.5.0",
    "@spruceid/didkit-wasm": "^0.3.0-alpha0",
    "axios": "^1.7.9",
    "bignumber.js": "^9.1.2",
    "ethers": "^6.13.4",
    "multiformats": "^13.0.0",
    "redis": "^4.6.10",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^27.5.1",
    "jest-mock-extended": "^3.0.4",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.8.0"
  },
  "scripts": {
    "clean": "rimraf dist node_modules",
    "build": "npm run build:esm && npm run build:types",
    "build:esm": "tsc --module NodeNext --outDir dist/esm",
    "build:types": "tsc --declaration --declarationDir dist --emitDeclarationOnly",
    "test": "jest --verbose",
    "lint": "tsc --noEmit && eslint --ext .ts,.js,.tsx .",
    "prettier": "prettier --write ."
  }
}